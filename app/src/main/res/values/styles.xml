<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AnimateIt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="android:windowBackground">@color/deck_background</item>
    </style>

    <style name="Widget.AnimateIt.WebView" parent="android:Widget">
        <item name="android:background">@color/deck_background</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Widget.AnimateIt.TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="Widget.AnimateIt.TextView.Paragraph" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="Widget.AnimateIt.TextView.Api" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_body</item>
    </style>

</resources>
